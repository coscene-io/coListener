<launch>
    <node pkg="colistener" exec="colistener" name="colistener" output="screen">
        <param name="subscribe_topics" value="['/error_code', '/error_event']"/>
        
        <param name="persistence_expire_secs" value="3600"/>
        <param name="persistence_file_path" value="/tmp/colistener/persistence/ros2.db"/>
        
        <param name="action_type" value="common"/>
        
        <param name="log_directory" value="/tmp/colistener/logs/"/>
    </node>
</launch>
